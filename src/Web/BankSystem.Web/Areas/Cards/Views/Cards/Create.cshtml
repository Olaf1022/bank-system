@model BankSystem.Web.Areas.Cards.Models.CardCreateViewModel

@{
    ViewData["Title"] = "Create card";
}

<div class="text-center w-md-75 w-lg-50 mx-auto my-4">
    <h2>@ViewData["Title"]</h2>
    <form method="post">
        <hr class="w-75" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="BankAccountId">
            </label>
            <select class="custom-select" asp-items="Model.BankAccounts"></select>
            <span asp-validation-for="BankAccountId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a class="btn btn-outline-secondary" asp-controller="Cards" asp-action="Create">Cancel</a>
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>