@model CardListingViewModel

@{
    ViewData["Title"] = "All cards";

    // Pass ViewData with the surroundingPagesCount constant
    // and the desired number to the partial view if you want to have custom number of surrounding pages
    // or if you want to use the default one don't pass anything. The default number of surrounding pages is 3.

    // Example
    //ViewData[WebConstants.SurroundingPagesCountKey] = 10;
    // Also don't forget to pass it to the partial helper
    // Example
    // <partial name="_Pagination" model="@Model.MoneyTransfers" view-data="@ViewData" />
    // P.S Keep in mind the partial helper should be down below after the whole html code or wherever you want to display the pagination
}

<div class="container">
    <h3>All cards</h3>
    <div class="row">
        @foreach (var card in Model.Cards)
        {
        <div class="col-12 col-md-6 col-lg-4 p-1">
            <div class="card shadow m-2 floating-card">
                <div class="card-body">
                    <h5 class="card-title">Card number: @card.Number</h5>
                    <p class="card-text">Expiration: @card.ExpiryDate</p>
                    <p class="card-text">Account: @card.AccountName</p>
                    <p class="card-text">Cardholder name: @card.Name</p>
                    <p class="card-text">Security code: @card.SecurityCode</p>

                    <button class="btn btn-outline-danger" data-toggle="modal"
                            data-target="#deleteModal" data-id="@card.Id">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>
        }
    </div>
</div>

<div id="deleteModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Are you sure you want to delete this card?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <form asp-action="Delete" asp-controller="Cards" method="post">
                    <input type="hidden" name="id">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (Model.Cards.Any())
{
    <partial name="_Pagination" model="@Model.Cards" />
}

@section Scripts{
    <script>
        $('#deleteModal').on('show.bs.modal',
            function (event) {
                var button = $(event.relatedTarget);
                var key = button.data('id');
                var modal = $(this);
                modal.find('.modal-footer input[name=id]').val(key);
                console.log($("input[name=id]"));
            })
    </script>
}