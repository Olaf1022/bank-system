@page
@model ReSendEmailVerification

@{
    ViewData["Title"] = "Confirm email";
}

<div class="w-md-75 w-lg-50 mx-auto my-4">
    <h2>@ViewData["Title"]</h2>
    <form method="post">
        <hr />
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group d-flex flex-row justify-content-center">
            <recaptcha />
            <span asp-validation-for="Recaptcha.ReCaptchaResponse" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Send verification link</button>
        </div>
    </form>
</div>